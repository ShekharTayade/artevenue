{% extends 'artevenue/estore_base.html' %}
{% load static %}
{% block page-title %} 
	<title>View Our Paintings on Your Wall | About Augmented Reality at Arte'Venue </title>
	<meta name="description" content="Information about viweing our paintings on your wall using the augmented reality.">
	<meta name="keywords" content="augmented reality, Arte'venue, Montage Art Pvt Ltd, Online art gallery, view paintings on your wall, see paininting on wall">
{% endblock page-title %} 
{% block page-description %}
{% endblock page-description %}
{% block page-keywords %}
{% endblock page-keywords %}

{% block coursel-stylesheet %}
{% endblock coursel-stylesheet %}

{% block jqueryui-script %}
{% endblock jqueryui-script %}

{% block slick-slider %}
{% endblock slick-slider %}

{% block front.js %}
{% endblock front.js %}

{% block imagemap-resize-script %}
{% endblock imagemap-resize-script %}

{% block google-recaptcha-3 %}
{% endblock google-recaptcha-3 %}

{% block yt-scr %}
