	<!-- Only Override the site content block -->
	{% block sitecontent %}
    <div class="container">
		<div class = "row">
			<div class = "col-12 mt-4 text-center">
				<h1 style="font-weight:700; font-size:1.2rem;">CURRENT OFFERS</h1>
